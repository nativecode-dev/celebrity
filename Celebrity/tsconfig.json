{
  "compileOnSave":  true, 
  "compilerOptions": {
    "declaration": false,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "outDir": "wwwroot/client",
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "include": [
    "Content/client/**/*.ts"
  ]
}